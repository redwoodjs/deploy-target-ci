{
  $schema: 'https://docs.renovatebot.com/renovate-schema.json',
  configMigration: true,
  extends: [
    'config:recommended',
    ':disableRateLimiting',
  ],
  automerge: true,
  postUpdateOptions: [
    'yarnDedupeHighest',
  ],
  rangeStrategy: 'pin',
  rebaseWhen: 'conflicted',
  semanticCommits: 'disabled',
  packageRules: [
    {
      groupName: 'Redwood',
      followTag: 'rc',
      ignoreUnstable: false,
      matchPackageNames: [
        '/^@redwoodjs//',
      ],
    },
    {
      groupName: 'Engines',
      matchDepTypes: [
        'engines',
      ],
      enabled: false,
    },
  ],
  ignoreDeps: [
    '@netlify/zip-it-and-ship-it',
    'archiver',
    'fs-extra',
    'node',
    'humanize-string',
    'prettier-plugin-tailwindcss',
    'prop-types',
    'react',
    'react-dom',
  ],
}
